<% @page_title = "All Sections" %>

<%= link_to("Return to Pages", pages_path(:subject_id => @page.subject_id), :class => 'back-link') %>


<div class ="sections index">
  <h2>Sections</h2>

  <%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
  <%= link_to("Add New Section", new_section_path(:page_id => @page.id), :class => 'action new') %>

  <table class="listing" summary="Section list">
    <tr class="header">
      <th>#</th>
      <th>Section</th>
      <th>Page</th>
      <th>Visible</th>
      <th>Users</th>
      <th>Content type</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
        <tr>
          <td><%= section.position %></td>
          <td><%= section.name %></td>
          <td><%= section.page.try(:name) %></td>
          <td class="center"><%= status_tag(section.is_visible) %></td>
          <td class="center"><%= section.users.size %></td>
          <td><%= section.content_type %></td>
          <td><%= section.content %></td>
          <td class="actions">
            <%= link_to("Show", section_path(section, :page_id => @page.id), :class => 'action show') %>
            <%= link_to("Edit", edit_section_path(section, :page_id => @page.id), :class => 'action edit') %>
            <%= link_to("Delete", delete_section_path(section, :page_id => @page.id),
                        :class => 'action delete') %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
